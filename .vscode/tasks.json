{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dmlog_monitor",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build",
                "dmlog_monitor"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"],
            "detail": "Budowanie dmlog_monitor z symbolami debugowania"
        },
        {
            "label": "clean and build dmlog_monitor",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build",
                "clean",
                "&&",
                "make",
                "-C",
                "${workspaceFolder}/build",
                "dmlog_monitor"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Czyszczenie i pe≈Çne przebudowanie dmlog_monitor"
        },
        {
            "label": "configure cmake with debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Konfiguracja CMake z symbolami debugowania"
        }
    ]
}